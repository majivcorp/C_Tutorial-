find . -name "*~" -print -delete -or -name "#*#" -print -delete




//Material sourced from https://www.man7.org/linux/man-pages/man1/find.1.html- another alternate wld be find . \( -name '*~' -or -name '#*#' \) -print -delete
//Material sourced from https://www.man7.org/linux/man-pages/man1/find.1.html
